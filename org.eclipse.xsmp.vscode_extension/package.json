{
	"name": "xsmp",
	"displayName": "XSMP Modeler",
	"description": "VSCode extension for XSMP Modeler",
	"version": "1.1.0-rc6",
	"publisher": "thales-alenia-space",
	"author": "Thales Alenia Space",
	"icon": "images/xsmp.png",
	"license": "EPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ThalesGroup/xsmp-modeler-core.git"
	},
	"bugs": {
		"url": "https://github.com/ThalesGroup/xsmp-modeler-core/issues"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:xsmpcat",
		"onCommand:xsmp.createNewProject"
	],
	"main": "target/extension",
	"contributes": {
		"languages": [
			{
				"id": "xsmpcat",
				"aliases": [
					"xsmpcat"
				],
				"extensions": [
					".xsmpcat"
				],
				"configuration": "./xsmp.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "xsmpcat",
				"scopeName": "source.xsmpcat",
				"path": "./syntaxes/xsmp.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "xsmp.smdl.proxy",
				"title": "Xsmp: Generate SMDL files"
			},
			{
				"command": "xsmp.python.proxy",
				"title": "Xsmp: Generate Python code"
			},
			{
				"command": "xsmp.esa_cdk.proxy",
				"title": "Xsmp: Generate ESA CDK C++ code"
			},
			{
				"command": "xsmp.xsmp_sdk.proxy",
				"title": "Xsmp: Generate XSMP SDK C++ code"
			},
			{
				"command": "xsmp.createNewProject",
				"title": "Create: new Xsmp project"
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "Xsmp",
				"properties": {
					"xsmp.javaPath": {
						"type": "string",
						"description": "Java executable path."
					}
				}
			}
		]
	},
	"devDependencies": {
		"@types/node": "^17.0.34",
		"@types/vscode": "^1.67.0",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.1"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"watch": "tsc -w -p ./src",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	}
}